                    <img src="{{ asset('images/Capture d\'√©cran 2024-11-21 212822.png') }}" alt="Zikou">
                    <h4>Zikou</h4>
                    <p>takes mtaa lglace w bira </p>
                    <div class="actions">
                        <span>‚ù§2</span>
                        <span>üí¨1</span>
                        <span>üì©</span>
                    </div>
                </div>

            </section>

            <!-- Section des messages -->
            <section class="messages">
                <aside class="sidebar">
                    <div class="friends">
                        <h2>Messages</h2>
                        <ul>
                            {% for friend in friends %}
                                <li>
                                    <a href="{{ path('message_chat', {'friend': friend.id}) }}">
                                        {{ friend.name }}
                                    </a>
                                </li>
                            {% else %}
                                <li>Aucun ami trouv√©.</li>
                            {% endfor %}
                        </ul>
                    </div>
                </aside>
            </section>



        </main>
    </div>
{% endblock %}
